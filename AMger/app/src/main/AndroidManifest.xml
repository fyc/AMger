<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Message Activity -->

        <!-- Polling Service -->
        <service android:name="com.example.amger.PollingService">
            <intent-filter>
                <action android:name="com.ryantang.service.PollingService"/>
            </intent-filter>
        </service>

        <!-- Polling Service -->
        <service android:name="com.example.amger.PollingService2">
            <intent-filter>
                <action android:name="com.ryantang.service.PollingService2"/>
            </intent-filter>
        </service>
    </application>

</manifest>